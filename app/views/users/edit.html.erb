<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <label>Name</label><br>
        <%= f.text_field :name %><br>
        <label>Image</label><br>
        <%= f.attachment_field :profile_image %><br>
        <label>Introduction</label><br>
        <%= f.text_area :introduction %><br>
        <%= f.submit 'Update User' %>
      <% end %>
    </div>
  </div>
</div>

