<div>
  <%= flash[:notice] %>
</div>
<%= render 'books/book', book: @newbook, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td><%= render 'books/favorite', book: @book %></td>
            <td>コメント数：<%= @book.book_comments.count %></td>
            <% if @book.user.id == current_user.id %>
              <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
              <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
        <div>
          <%= f.text_area :comment %>
          <%= f.submit '送信' %>
        </div>
      <% end %>
      <p>コメント</p>
      <% @book_comments.each do |book_comment| %>
      <div>
        <%= book_comment.user.name %><br>
        <%= book_comment.comment %>
      <% end %>
      </div>
    </div>
  </div>
</div>